# Copy this file to .env and fill in your actual values
# Azure Speech resource (used for billing for containers)
SPEECH_BILLING_ENDPOINT=https://your-speech-resource.cognitiveservices.azure.com/
SPEECH_API_KEY=your_speech_key

# Ports (adjust if already used)
LID_PORT=5003
EN_PORT=5004
AR_PORT=5005

# Local container image tags (override if pinning versions)
LID_IMAGE=mcr.microsoft.com/azure-cognitive-services/speechservices/language-detection
STT_IMAGE=mcr.microsoft.com/azure-cognitive-services/speechservices/speech-to-text

# Locales
EN_LOCALE=en-US
AR_LOCALE=ar-SA

# Resource constraints
LID_MEMORY=1g
LID_CPUS=1
STT_MEMORY=2g
STT_CPUS=2
