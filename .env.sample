# Copy this file to .env and fill in your actual values
# cp .env.sample .env

# =============================================================================
# Azure Speech resource (used for billing for containers)
# =============================================================================
SPEECH_BILLING_ENDPOINT=https://your-speech-resource.cognitiveservices.azure.com
SPEECH_API_KEY=your_speech_api_key_here

# =============================================================================
# Azure Speech Cloud STT credentials
# =============================================================================
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus2
# Optional: Use endpoint instead of region
# AZURE_SPEECH_ENDPOINT=https://eastus2.stt.speech.microsoft.com

# =============================================================================
# Container Ports (adjust if already used)
# =============================================================================
LID_PORT=5003
EN_PORT=5004
AR_PORT=5005

# =============================================================================
# Container Images (override if pinning versions)
# =============================================================================
LID_IMAGE=mcr.microsoft.com/azure-cognitive-services/speechservices/language-detection
STT_IMAGE=mcr.microsoft.com/azure-cognitive-services/speechservices/speech-to-text

# =============================================================================
# Locales for STT containers
# =============================================================================
EN_LOCALE=en-US
AR_LOCALE=ar-SA

# =============================================================================
# Resource constraints for containers
# =============================================================================
LID_MEMORY=1g
LID_CPUS=1
STT_MEMORY=2g
STT_CPUS=2
